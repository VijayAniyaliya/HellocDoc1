@{
    Layout = "";
}

@model HellocDoc1.Services.Models.LoginViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <style>
        .input-validation-error {
            border: 1px solid red;
        }

        .content {
            height: 80vh;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }
    </style>
</head>

<body>

    <div class="container-fluid text-center">
        <header>
            <img src="/Images//light.png" onclick="myFunction()" class="float-right mt-2" width="30px" alt="">
        </header>


        <div class="subdiv">


            <img src="/Images/image_2024_01_17T04_17_17_750Z.png" class="hellodoc-img mt-3" alt="">

            <div class="content ">

                <div class=" back-btn">
                    <a asp-action="Login" class="link-info text-decoration-none">

                        <span class="back-btn-txt h5">&lt; Back</span>
                    </a>
                </div>

                <div class="h3 mt-3">Reset your password</div>

                <form asp-action="Reset_password" method="post">
                    <div class="form-floating inputs mb-1 mt-4">
                        <input type="email" class="form-control patient-input" id="floatingInput"
                               placeholder="name@example.com" asp-for="Email">
                        <label for="floatingInput" class="label">Email</label>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                             class="bi bi-person-circle input-icon" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                            <path fill-rule="evenodd"
                                  d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                        </svg>
                    </div>
                    <span asp-validation-for="Email" class="text-danger  d-block  loginicn"></span>
                <button type="submit" class="btn bg-info inputs">Reset password</button>
                </form>

                <div class=" back-to-login mt-4">
                    <a asp-area="" asp-controller="Patient" asp-action="Login" class="nav-link link-info text-decoration-none">

                        <span class="back-btn-txt h5">&lt; Back to login</span>
                    </a>
                </div>

            </div>




        </div>
        <div class="fixed-bottom mb-3">
            <footer class="footer ">
                <a href="#" class="text-secondary">Terms of condition</a>
                <span>|</span>
                <a href="#" class="text-secondary">Privacy policy</a>
            </footer>
        </div>

    </div>
    <div class="back-img">
        <img src="~/images/11116016_415.jpg" width="100%" alt="">
    </div>
    <script src="~/js/custom.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>

@if (TempData["Error"] != null)
{
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.error('@TempData["Error"]');
    </script>
}

