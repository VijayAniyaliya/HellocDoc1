@{
    Layout = "";
}

@model HellocDoc1.DTO.LoginViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>


    <div class="container-fluid text-center">
        <header>
            <img src="~/Images/light.png" onclick="myFunction()" class="float-right mt-2"
                 width="30px" alt="">
        </header>



        <div class="subdiv">
            <img src="/Images/image_2024_01_17T04_17_17_750Z.png" class="hellodoc-img mt-3" alt="">

            <div class="content ">

                <div class=" back-btn">
                    <a href="#" class="link-info text-decoration-none">

                        <span class="back-btn-txt h5">&lt; Back</span>
                    </a>
                </div>

                <div class="h3 mt-3">Login to your account</div>

                <form asp-action="Login" method="post">
                   <div asp-validation-summary="ModelOnly" class="text-danger"></div> 

                <div class="form-floating inputs mb-1 mt-4">
                    <input type="email" class="form-control patient-input" id="floatingInput"
                           placeholder="name@example.com" asp-for="Email">
                    <label for="floatingInput" class="label">Email address</label>
                   
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-person-circle input-icon" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                        <path fill-rule="evenodd"
                              d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                    </svg>
                </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                <div class="form-floating inputs mb-0">
                    <input type="password" class="form-control patient-input" id="floatingPassword"
                               placeholder="Password" asp-for="Password">
                    <label for="floatingPassword" class="label">Password</label>
                       
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-eye input-icon" viewBox="0 0 16 16">
                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z" />
                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0" />
                    </svg>
                </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <br />
                <button type="submit"  class="btn bg-info inputs py-3">Log in</button>
                </form>


                <div class="mt-4">
                    <a asp-area="" asp-controller="Patient" asp-action="Reset_password" class="nav-link text-decoration-none h5">
                        <span class="h5 text-info">
                            Forget
                            password?
                        </span>
                    </a>
                </div>
            </div>
        </div>

        <div class="fixed-bottom mb-3">
            <footer class="footer ">
                <a href="#" class="text-secondary">Terms of condition</a>
                <span>|</span>
                <a href="#" class="text-secondary">Privacy policy</a>
            </footer>
        </div>

    </div>
    <div class="back-img">
        <img src="~/images/11116016_415.jpg" width="100%" alt="">
    </div>

@*     <partial name="_ValidationScriptsPartial" /> *@
    <script src="~/js/custom.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


</body>

</html>