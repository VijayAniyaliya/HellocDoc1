@{
    Layout = "";
}


@model Services.Models.CreateAccountViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <style>
        .input-validation-error {
            border: 1px solid red;
        }
    </style>
</head>

<body>


    <div class="container-fluid text-center">
        <header>
            <img src="~/Images/light.png" onclick="myFunction()" class="float-right mt-2"
                 width="30px" alt="">
        </header>



        <div class="subdiv">
            <img src="/Images/image_2024_01_17T04_17_17_750Z.png" class="hellodoc-img mt-3" alt="">

            <div class="content mt-5">

                <div class="h3 mt-3">Create account</div>

                <form asp-action="CreatePatientAccount" method="post">
                    <input asp-for="RequestId" value="@Model.RequestId" hidden />
                    <div class="form-floating inputs mb-1 mt-4">
                        <input type="email" class="form-control patient-input" id="floatingInput"
                               placeholder="name@example.com" asp-for="Email">
                        <label for="floatingInput" class="label">Email address</label>
                        <i class="bi bi-person-circle input-icon"></i>
                    </div>
                    <span asp-validation-for="Email" class="text-danger " style="position:relative; bottom:25px; right:75px;"></span>
                    <div class="form-floating inputs mb-0">
                        <input type="password" class="form-control patient-input" id="password"
                               placeholder="Password" asp-for="Password">
                        <label for="password" class="label">Password</label>
                        <i class="bi bi-eye-slash-fill input-icon" onclick="fun()" id="eye"></i>
                    </div>
                    <div style="    width: 361px; margin: 0 38%;">
                    <span asp-validation-for="Password" class="text-danger d-block " style="position:relative; bottom:25px; right:65px;"></span>               
                    </div>
                    <div class="form-floating inputs mb-0">
                        <input type="password" class="form-control patient-input" id="confirpassword"
                               placeholder="Password" asp-for="ConfirmPassword">
                        <label for="confirpassword" class="label">Confirm Password</label>
                        <i class="bi bi-eye-slash-fill input-icon" onclick="confirmPassword()" id="eyes"></i>
                    </div>
                    <div style=" width: 108%;">

                    <span asp-validation-for="ConfirmPassword" class="text-danger d-block " style="position:relative; bottom:25px; right:40px;"></span>
                    </div>


                    <button type="submit" class="btn bg-info inputs py-3">Create</button>
                </form>
            </div>
        </div>

        <div class="fixed-bottom mb-3">
            <footer class="footer ">
                <a href="#" class="text-secondary">Terms of condition</a>
                <span>|</span>
                <a href="#" class="text-secondary">Privacy policy</a>
            </footer>
        </div>

    </div>
    <div class="back-img">
        <img src="~/images/11116016_415.jpg" width="100%" alt="">
    </div>

    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    <script src="~/js/custom.js"></script>
    @*     <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <partial name="_ValidationScriptsPartial" /> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        const path = document.getElementById("eye");
        const password = document.getElementById('password')
        function fun() {
            if (password.type === "password") {
                path.classList.remove("bi-eye-slash-fill");
                path.classList.add("bi-eye-fill");
                password.type = "text";
            }
            else {
                path.classList.remove("bi-eye-fill");
                path.classList.add("bi-eye-slash-fill");
                password.type = "password";

            }
        }

        const eyes = document.getElementById("eyes");
        const confirmpassword = document.getElementById('confirpassword')
        function confirmPassword() {
            if (confirmpassword.type === "password") {
                eyes.classList.remove("bi-eye-slash-fill");
                eyes.classList.add("bi-eye-fill");
                confirmpassword.type = "text";
            }
            else {
                eyes.classList.remove("bi-eye-fill");
                eyes.classList.add("bi-eye-slash-fill");
                confirmpassword.type = "password";

            }
        }

    </script>
</body>


</html>



@if (TempData["Error"] != null)
{
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.error('@TempData["Error"]');
    </script>
}