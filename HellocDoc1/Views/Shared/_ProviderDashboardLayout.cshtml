@{
    var claims = User.Identities.ElementAtOrDefault(1)?.Claims;
    var firstName = claims?.FirstOrDefault(a => a.Type == "firstname")?.Value;
    var lastName = claims?.FirstOrDefault(a => a.Type == "lastname")?.Value;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HellocDoc1</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/Admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Provider.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HellocDoc1.styles.css" asp-append-version="true" />
</head>
<body>
    <button class="btn border py-0 canvas" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasWithBackdrop">
        <i class="bi bi-list h2"></i>
    </button>
    <header class="d-flex justify-content-between">
        <div class="ms-5">
            <img src="~/Images/image_2024_01_17T04_17_17_750Z.png" class="doc-img"
                 height="60px"
                 alt="" />
        </div>
        <div class="d-flex gap-3 mr-3 justify-content-center align-items-center">
            <div class="d-flex align-items-center ">
                <span class="d-none d-md-block">
                    Welcome
                    <span class="fw-bold">@firstName @lastName</span>
                </span>
            </div>
            <div>
                <a type="button" asp-action="Logout" class="btn text-info border-1 border-info logout d-none d-md-block">
                    Logout
                </a>
                <a type="button" asp-action="Logout" class="btn text-info border-1 border-info Logout d-block d-md-none">
                    <i class="bi bi-box-arrow-left"></i>
                </a>
            </div>
            <div>
                <img src="~/Images/light.png" onclick="myFunction()" height="40px" alt="" />
            </div>
        </div>
    </header>
    <hr class="my-0 d-none d-md-block" />
    <div class="shadow px-lg-5 px-2 my-2">
        <div class=" h6 d-none d-md-flex gap-4 ">
            @if ((Context.Request.Path.Equals("/Provider/ProviderDashboard")) || (Context.Request.Path.StartsWithSegments("/Provider/ViewCase")) || (Context.Request.Path.StartsWithSegments("/Provider/ConcludeCare")) || (Context.Request.Path.StartsWithSegments("/Provider/ViewNotes")) || (Context.Request.Path.StartsWithSegments("/Provider/CreateRequest")) || (Context.Request.Path.StartsWithSegments("/Provider/SendOrders")) || (Context.Request.Path.StartsWithSegments("/Provider/EncounterForm")) || (Context.Request.Path.StartsWithSegments("/Provider/CloseCase")))
            {
                <a asp-action="AdminDashboard" class="text-decoration-none text-info px-2" style="padding-bottom: 11px;border-bottom: 3px solid #17a2b8!important;">Dashboard</a>
            }
            else
            {
                <a asp-action="AdminDashboard" class="text-decoration-none px-2" style="color:black;">Dashboard</a>
            }
            @if (Context.Request.Path.Equals("/Admin/ProviderLocation"))
            {
                <a asp-action="ProviderLocation" class="text-decoration-none text-info px-2" style="padding-bottom: 11px;border-bottom: 3px solid #17a2b8!important;">Providers Location</a>
            }
            else
            {
                <a asp-action="ProviderLocation" class="text-decoration-none px-lg-2 px-0" style="color:black;">Providers Location</a>

            }
            @if (Context.Request.Path.Equals("/Admin/AdminProfile"))
            {
                <a asp-action="AdminProfile" class="text-decoration-none text-info px-lg-2 px-0" style="padding-bottom: 11px;border-bottom: 3px solid #17a2b8!important;">My Profile</a>
            }
            @if ((Context.Request.Path.Equals("/Admin/Vendors")) || (Context.Request.Path.Equals("/Admin/AddBusiness")))
            {
                <a asp-action="Vendors" class="text-decoration-none text-info px-2" style="padding-bottom: 11px;border-bottom: 3px solid #17a2b8!important;">Partners</a>
            }
            else
            {
                <a asp-action="Vendors" class="text-decoration-none px-2" style="color:black;">Partners</a>
            }
        </div>
    </div>
    @RenderBody()
    <footer class="bg-dark  text-white d-flex justify-content-end py-2 fixed-bottom mt-4">
        <a href="#" class="text-secondary my-auto"><span class="text-white mr-1">Terms of condition</span></a>
        <span class="my-auto mr-1">|</span>
        <a href="#" class="text-secondary my-auto"><span class="text-white mr-3">Privacy policy</span></a>
    </footer>
    <div class="offcanvas offcanvas-start canvas-body" data-bs-scroll="true" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasWithBackdropLabel" style="width:215px; margin-top:61px; border-top: 1px solid #d3d0d0;">
        <div class="offcanvas-body px-0" id="offcanvasWithBackdropLabel">
            <div>
                <span>
                    <span class="fw-bold ps-3">Welcome @firstName @lastName</span>
                </span>
                <div class="d-flex flex-column gap-3 h6 mt-2" style=""> 

                    @if ((Context.Request.Path.Equals("/Admin/AdminDashboard")) || (Context.Request.Path.StartsWithSegments("/Provider/ViewCase")) || (Context.Request.Path.StartsWithSegments("/Provider/ViewUploads")) || (Context.Request.Path.StartsWithSegments("/Provider/ViewNotes")) || (Context.Request.Path.StartsWithSegments("/Provider/CreateRequest")) || (Context.Request.Path.StartsWithSegments("/Provider/SendOrders")) || (Context.Request.Path.StartsWithSegments("/Provider/EncounterForm")) || (Context.Request.Path.StartsWithSegments("/Provider/CloseCase")))
                    {
                        <a asp-action="AdminDashboard" class="text-decoration-none text-info ps-3 py-2" style="    background: #cef6ff;">Dashboard</a>
                    }
                    else
                    {
                        <a asp-action="AdminDashboard" class="text-decoration-none ps-3" style="color:black;">Dashboard</a>
                    }
                    @if (Context.Request.Path.Equals("/Admin/ProviderLocation"))
                    {
                        <a asp-action="ProviderLocation" class="text-decoration-none text-info ps-3 py-2" style="background: #cef6ff;">Providers Location</a>
                    }
                    else
                    {
                        <a asp-action="ProviderLocation" class="text-decoration-none px-lg-2 ps-3" style="color:black;">Providers Location</a>

                    }
                    @if (Context.Request.Path.Equals("/Admin/AdminProfile"))
                    {
                        <a asp-action="AdminProfile" class="text-decoration-none text-info px-lg-2 ps-3 py-2" style="    background: #cef6ff;">My Profile</a>
                    }
                    else
                    {
                        <a asp-action="AdminProfile" class="text-decoration-none ps-3" style="color:black;">My Profile</a>

                    }
                    @if ((Context.Request.Path.Equals("/Admin/Vendors")) || (Context.Request.Path.Equals("/Admin/AddBusiness")))
                    {
                        <a asp-action="Vendors" class="text-decoration-none text-info ps-3 py-2" style=" background: #cef6ff;">Partners</a>
                    }
                    else
                    {
                        <a asp-action="Vendors" class="text-decoration-none ps-3" style="color:black;">Partners</a>
                    }

                </div>
            </div>
        </div>
    </div>

    <script src="~/js/custom.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>