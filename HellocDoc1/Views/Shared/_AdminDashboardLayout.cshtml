<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HellocDoc1</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    @*     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script> *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <!-- Option 1: Include in HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/Admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HellocDoc1.styles.css" asp-append-version="true" />
</head>
<body>
    <button class="btn border py-0 canvas" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
        <i class="bi bi-list h2"></i>
    </button>
    <header class="d-flex justify-content-between">
        <div class="ms-5">
            <img src="~/Images/image_2024_01_17T04_17_17_750Z.png" class="doc-img"
                 height="60px"
                 alt="" />
        </div>
        <div class="d-flex gap-3 mr-3 justify-content-center align-items-center">
            <div class="d-flex align-items-center ">
                <span class="d-none d-md-block">
                    Welcome
                    <span class="fw-bold">test</span>
                </span>
            </div>
            <div>
                <a type="button" asp-action="Logout" class="btn text-info border-1 border-info logout d-none d-md-block">
                    Logout
                </a>
                <a type="button" asp-action="Logout" class="btn text-info border-1 border-info Logout d-block d-md-none">
                    <i class="bi bi-box-arrow-left"></i>
                </a>
            </div>
            <div>
                <img src="~/Images/light.png" onclick="myFunction()" height="40px" alt="" />
            </div>
        </div>
    </header>
    <hr class="my-0 d-none d-md-block" />
    <div class="shadow px-lg-5 px-2 my-2">
        <div class=" h6 d-none d-md-flex gap-4 ">
            @if ((Context.Request.Path.Equals("/Admin/AdminDashboard")) || (Context.Request.Path.StartsWithSegments("/Admin/ViewCase")) || (Context.Request.Path.StartsWithSegments("/Admin/ViewNotes")) || (Context.Request.Path.StartsWithSegments("/Admin/CreateRequest")))
            {
                <a asp-action="AdminDashboard" class="text-decoration-none text-info px-2" style="padding-bottom: 11px;border-bottom: 4px solid #17a2b8!important;">Dashboard</a>
            }
            else
            {
                <a asp-action="AdminDashboard" class="text-decoration-none px-2" style="color:black;">Dashboard</a>
            }
            <a class="text-decoration-none" style="color:black;">Providers Location</a>
            @if (Context.Request.Path.Equals("/Admin/AdminProfile"))
            {
                <a asp-action="AdminProfile" class="text-decoration-none text-info px-2" style="padding-bottom: 11px;border-bottom: 4px solid #17a2b8!important;">My Profile</a>
            }
            else
            {
                <a asp-action="AdminProfile" class="text-decoration-none px-2" style="color:black;">My Profile</a>

            }
            @if ((Context.Request.Path.Equals("/Admin/Provider")) || (Context.Request.Path.Equals("/Admin/EditPhysician")) || (Context.Request.Path.Equals("/Admin/CreatePhysician")))
            {
                <a asp-action="Provider" class="text-decoration-none text-info px-2 dropdown-toggle" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false" style="padding-bottom: 11px;border-bottom: 4px solid #17a2b8!important;">Providers</a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu2" style="cursor:pointer;">
                    <li><a asp-action="Provider" class="text-decoration-none dropdown-item provider-menu mb-2">Providers</a></li>
                    <li><a class="text-decoration-none dropdown-item provider-menu  mb-2">Schedulling</a></li>
                    <li><a class="text-decoration-none dropdown-item provider-menu">Invoicing</a></li>
                </ul>

            }
            else
            {
                <a class="text-decoration-none px-2 dropdown-toggle" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false" style="color:black; cursor:pointer;">Providers</a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu2" style="cursor:pointer;">
                    <li><a asp-action="Provider" class="text-decoration-none dropdown-item provider-menu mb-2">Providers</a></li>
                    <li><a class="text-decoration-none dropdown-item provider-menu  mb-2">Schedulling</a></li>
                    <li><a class="text-decoration-none dropdown-item provider-menu">Invoicing</a></li>
                </ul>
            }
            <a class="text-decoration-none  px-2" style="color:black;">Partners</a>
            @if ((Context.Request.Path.Equals("/Admin/Access")) || (Context.Request.Path.Equals("/Admin/CreateAccess")) || (Context.Request.Path.Equals("/Admin/UserAccess")))
            {
                <a asp-action="Access" class="text-decoration-none dropdown-toggle text-info px-2" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false" style="padding-bottom: 11px;border-bottom: 4px solid #17a2b8!important;">Access</a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu2" style="cursor:pointer;">
                    <li><a asp-action="Access" class="text-decoration-none dropdown-item provider-menu mb-2">Access</a></li>
                    <li><a asp-action="UserAccess" class="text-decoration-none dropdown-item provider-menu  mb-2">User Access</a></li>
                </ul>

            }
            else
            {
                <a class="text-decoration-none px-2 dropdown-toggle" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false" style="color:black; cursor:pointer;">Access</a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu2" style="cursor:pointer;">
                    <li><a asp-action="Access" class="text-decoration-none dropdown-item provider-menu mb-2">Access</a></li>
                    <li><a asp-action="UserAccess" class="text-decoration-none dropdown-item provider-menu  mb-2">User ACcess</a></li>
                </ul>
            }
            <a class="text-decoration-none px-2" style="color:black;">Records</a>
        </div>
    </div>
    @RenderBody()
    <footer class="bg-dark  text-white d-flex justify-content-end py-2 fixed-bottom mt-4">
        <a href="#" class="text-secondary my-auto"><span class="text-white mr-1">Terms of condition</span></a>
        <span class="my-auto mr-1">|</span>
        <a href="#" class="text-secondary my-auto"><span class="text-white mr-3">Privacy policy</span></a>
    </footer>
    <div class="offcanvas offcanvas-start canvas-body" tabindex="-1" id="offcanvasExample" style="width:40%" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Profile</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div>
                <span>
                    <span class="fw-bold">Welcome test</span>
                </span>
                <div class="d-flex flex-column gap-2 h6 mt-2" style="">

                    <a class="text-decoration-none text-info mr-3">Dashboard</a>
                    <a class="text-decoration-none text-info">Provider Location</a>
                    <a class="text-decoration-none text-info">My Profile</a>
                    <a class="text-decoration-none text-info">Partners</a>
                    <a class="text-decoration-none text-info">Providers</a>
                    <a class="text-decoration-none text-info">Access</a>
                    <a class="text-decoration-none text-info">Records</a>

                </div>
            </div>
        </div>
    </div>

    <script src="~/js/custom.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @* <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>  *@
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>