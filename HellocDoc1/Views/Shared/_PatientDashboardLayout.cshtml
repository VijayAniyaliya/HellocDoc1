
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HellocDoc1</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <!-- Option 1: Include in HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/request.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HellocDoc1.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid p-0">
        <header class="d-flex justify-content-between">
            <div class="ms-5">
                <img src="~/Images/image_2024_01_17T04_17_17_750Z.png"
                     height="60px"
                     alt="" />
            </div>
            <div class="d-flex gap-3 mr-3 justify-content-center align-items-center">
                <div class="d-flex align-items-center">
                    <span>
                        Welcome
                        <span class="fw-bold">Tests Testing</span>
                    </span>
                </div>
                <div>
                    <button type="button" class="btn text-info border-1 border-info">
                        Logout
                    </button>
                </div>
                <div>
                    <img src="~/Images/light.png" onclick="myFunction()" height="40px" alt="" />
                </div>
            </div>
        </header>
        <hr class="my-0" />

        <div class="shadow">

            <ul class="nav nav-pills mb-3 mx-auto" id="pills-tab" role="tablist" style="width:95%">

                <li class="nav-item" role="presentation">
                    <button class="nav-link active bg-transparent rounded-0 h5" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Dashboard</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link bg-transparent  rounded-0 h5" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Profile</button>
                </li>
            </ul>
        </div>
        <div class="tab-content dashboard" id="pills-tabContent">
        @RenderBody()
        </div>
    </div>
    <script src="~/js/custom.js"></script>
</body>
</html>
