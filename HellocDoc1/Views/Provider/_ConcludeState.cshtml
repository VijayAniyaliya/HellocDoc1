@{
    Layout = "";
}

@model Services.Models.AdminDashboardViewModel
@using Common.Enum


<table class="table d-md-table d-none">
    <thead class=" table-secondary">
        <tr>
            <th scope="col">Name</th>
            <th></th>
            <th scope="col">Phone</th>
            <th scope="col">Address</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.requestClients)
        {
            <tr class="style_@item.Request.RequestTypeId">
                <td scope="row">@item.FirstName, @item.LastName</td>
                <td><i class="bi bi-envelope h5"></i></td>
                <td>
                    @switch (item.Request.RequestTypeId)
                    {
                        case 1:
                            <button type="button" class="btn border rounded-3 text-white"><i class="bi bi-telephone"></i>@item.Request.PhoneNumber</button>
                            <div>Patient</div>
                            break;
                        case 2:
                            <button type="button" class="btn border rounded-3 text-white"><i class="bi bi-telephone"></i>@item.Request.PhoneNumber</button>
                            <div>Patient</div>
                            <button type="button" class="btn border rounded-3 text-white"><i class="bi bi-telephone"></i>@item.PhoneNumber</button>
                            <div>Family/Friend</div>

                            break;
                        case 3:
                            <button type="button" class="btn border rounded-3 text-white"><i class="bi bi-telephone"></i>@item.Request.PhoneNumber</button>
                            <div>Patient</div>
                            <button type="button" class="btn border rounded-3 text-white"><i class="bi bi-telephone"></i>@item.PhoneNumber</button>
                            <div>Business</div>

                            break;
                        case 4:
                            <button type="button" class="btn border rounded-3 text-white"><i class="bi bi-telephone"></i>@item.Request.PhoneNumber</button>
                            <div>Patient</div>
                            <button type="button" class="btn border rounded-3 text-white"><i class="bi bi-telephone"></i>@item.PhoneNumber</button>
                            <div>Concierge</div>

                            break;
                    }
                </td>
                <td>@item.Street @item.City @item.State</td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn border rounded-3 text-white dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            Actions
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a href="@Url.Action("ConcludeCare", new {request_id = item.RequestId})" class="dropdown-item ps-3"><i class="bi bi-heart-fill"></i> Conclude Case</a></li>
                            <li><a class="dropdown-item ps-3" asp-action="ViewCase" asp-route-request_id="@item.Request.RequestId"><i class="bi bi-list-check mr-1"></i> View Case</a></li>
                            <li><a class="dropdown-item ps-3" asp-action="ViewUploads" asp-route-request_id="@item.RequestId"><i class="bi bi-list-check mr-1"></i> View Uploads</a></li>
                            <li><a class="dropdown-item ps-3" asp-action="ViewNotes" asp-route-request_id="@item.Request.RequestId"><i class="bi bi-list-check mr-1"></i> View Notes</a></li>
                            @if (item.Request.EncounterForms.Any(a => a.IsFinalize == true))
                            {
                                <li><a class="dropdown-item ps-3" onclick="downloadEncounter(@item.Request.RequestId)" style="cursor:pointer;"><i class="bi bi-slash-circle mr-1"></i> Encounter</a></li>
                            }
                            else if (item.Request.Status == (int)RequestStatus.Concluded)
                            {
                                <li><a class="dropdown-item ps-3" asp-action="Encounter" asp-route-request_id="@item.Request.RequestId"><i class="bi bi-slash-circle mr-1"></i> Encounter</a></li>
                            }
                        </ul>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>


<div class="accordion accordion-flush d-md-none d-block" id="accordionFlushExample">

    <div class="accordion-item">
        @foreach (var item in Model.requestClients)
        {
            <h2 class="accordion-header" id="flush-headingOne">
                <button class="accordion-button collapsed pb-5" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne-@item.RequestId" aria-expanded="false" aria-controls="flush-collapseOne" style="background-color:#e7f1ff; color:black">

                    <div class="col d-flex flex-column">
                        <span class="">@item.FirstName, @item.LastName</span>
                        <span class=" mt-4">@item.Street @item.City @item.State</span>
                    </div>
                    <div class="col d-flex flex-column text-end mt-2 p-0">
                        <div>
                            @switch (item.Request.RequestTypeId)
                            {
                                case 1:
                                    <span>Patient</span>
                                    <i class="bi bi-circle-fill text-success h6"></i>
                                    break;
                                case 2:
                                    <span>Family/Friend</span>
                                    <i class="bi bi-circle-fill text-warning h6"></i>
                                    break;
                                case 3:
                                    <span>Business</span>
                                    <i class="bi bi-circle-fill " style="color:pink;"></i>
                                    break;
                                case 4:
                                    <span>Concierge</span>
                                    <i class="bi bi-circle-fill text-primary h6"></i>
                                    break;
                            }

                        </div>
                        <div>
                            <div class=" btn rounded-pill text-info border-info float-end p-1 mt-3" style="width:150px">
                                Map Location
                            </div>
                        </div>

                    </div>
                </button>
            </h2>

            <div id="flush-collapseOne-@item.RequestId" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample" style="background-color:#e7f1ff; color:black">
                <hr class="m-0">
                <div class="d-flex justify-content-end d-inline">
                    <a asp-action="ViewCase" asp-route-request_id="@item.Request.RequestId" class="rounded-pill me-3 text-decoration-none viewCaseBtn p-1 viewCase">
                        View Case
                    </a>
                </div>
                <div class="accordion-body d-flex flex-column gap-1">
                    <div><i class="bi bi-envelope mr-1 icn"></i>Email: @item.Request.Email</div>
                    <div>
                        <i class="bi bi-telephone mr-1 icn"></i>Patient: @item.Request.PhoneNumber
                    </div>
                </div>
                <div class="row mx-3">
                    <div class="col-6 ps-0 pr-3 pb-2">
                        <a class="btn w-100 bg-danger  text-white rounded-pill p-1 btn-sm">Conclude Case</a>
                    </div>
                    <div class="col-6 p-0  pb-2">
                        <a asp-action="ViewNotes" asp-route-request_id="@item.Request.RequestId" class="btn w-100 bg-success text-white rounded-pill p-1 btn-sm">View Notes</a>
                    </div>
                    <div class="col-6 p-0 pr-3 pb-2">
                        <a class="btn w-100 text-white rounded-pill p-1 btn-sm" style="background:#3c6b5d;">Doctor Note</a>
                    </div>
                    <div class="col-6 p-0 pb-2">
                        <a asp-action="ViewUploads" asp-route-request_id="@item.RequestId" class="btn w-100 bg-success text-white rounded-pill p-1 btn-sm">View Uploads</a>
                    </div>
                    <div class="col-6 p-0 pr-3 pb-2">
                        <a asp-action="EncounterForm" asp-route-request_id="@item.Request.RequestId" class="btn w-100  bg-success text-white rounded-pill p-1 btn-sm">Encounter</a>
                    </div>
                    <div class="col-6 p-0">
                        <a class="btn w-100 bg-success text-white rounded-pill p-1 btn-sm">Email</a>
                    </div>
                </div>
                <div class="d-flex justify-content-end align-items-center gap-2 pr-3 pt-2">
                    <span>Chat with: </span>    
                    <button type="button" class="btn border-info rounded-3 text-info p-1"><i class="bi bi-person mr-1 h5"></i>Patient</button>
                    <button type="button" class="btn border-info rounded-3 text-info p-1"><i class="bi bi-person mr-1 h5"></i>Admin</button>
                </div>
            </div>
            <br />
        }
    </div>
</div>
<div id="housecall"></div>

@if (Model.TotalPage > 1)
{
    <div class="page-container">
        <ul class="pagination justify-content-center d-flex page-list">
            <li class="page-item @(Model.CurrentPage <= 1 ? "d-none" : "")">
                <a class="page-link border-0 m-2" onclick="changepage(@Model.CurrentPage - 1)"><i class="bi bi-chevron-double-left text-info page"></i></a>
            </li>
            @for (int CurrentPage = 1; CurrentPage <= Model.TotalPage; CurrentPage++)
            {
                <li class="m-2 btn @(CurrentPage == Model.CurrentPage ? "page-active" : "")" onclick="changepage(@CurrentPage)"><a class="text-decoration-none text-black curent-page-index" data-page="@CurrentPage">@CurrentPage</a></li>
            }
            <li class="page-item  @(Model.CurrentPage == Model.TotalPage ? "d-none" : "")">
                <a class="page-link border-0 m-2" onclick="changepage(@Model.CurrentPage + 1)"><i class="bi bi-chevron-double-right text-info page"></i></a>
            </li>
        </ul>

    </div>
}
else if (Model.TotalPage == 1)
{
}
else
{
    <div class="text-center text-danger fw-bold h5">No record found</div>
}


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script>
    function downloadEncounter(request_id) {
        $.ajax({
            url: "/Provider/DownloadEncounter/",
            type: "POST",
            data: { "request_id": request_id },
            dataType: "html",
            success: function (data) {
                $("#housecall").html(data);
                const myModal = new bootstrap.Modal("#staticBackdrop", {});
                myModal.show();
            },
            error: function () {
                alert("No Projects Found");
                $("#housecall").html('An error has occurred');
            }
        });
    };
</script>
