@model Services.Models.VendorsDetailsViewModel

<table class="table  d-md-table d-none">
    <thead>
        <tr class="table-secondary">
            <th scope="col">Profession</th>
            <th scope="col">Business Name</th>
            <th scope="col">Email</th>
            <th scope="col">Fax Number</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Business Contact</th>
            <th class="text-center" scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.vendorsDatas)
        {

            <tr>
                <td>@item.Profession</td>
                <td>@item.VendorName</td>
                <td>@item.Email</td>
                <td>@item.FaxNumber</td>
                <td>@item.PhoneNumber</td>
                <td>@item.BusinessContact</td>
                <td class="text-center">
                    <a asp-action="AddBusiness" asp-controller="Admin" asp-route-VendorId="@item.ProfessionId" class="btn text-info border-2 border-info fw-bold rounded-3 px-2 h5 ">Edit</a>
                    <button type="button" onclick="deletebusiness(@item.ProfessionId)" class="btn text-info border-2 border-info fw-bold rounded-3 px-2 h5 ">Delete</button>
                </td>
            </tr>
        }
    </tbody>

</table>

<div class="accordion accordion-flush d-md-none d-block" id="accordionFlushExample">
    <div class="accordion-item">
        @foreach (var item in Model.vendorsDatas)
        {
            <h2 class="accordion-header" id="flush-headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne-@item.ProfessionId" aria-expanded="false" aria-controls="flush-collapseOne" style="background-color:#e7f1ff; color:black">
                        <div class="ps-3 d-flex align-items-center">
                            <span class="ms-2">@item.Profession</span>
                        </div>
                </button>
            </h2>
            <div id="flush-collapseOne-@item.ProfessionId" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample" style="background-color:#e7f1ff; color:black">

                <div class="accordion-body d-flex flex-column gap-1">
                    <div><i class="bi bi-envelope mr-1 icn"></i>Email: @item.Email</div>
                    <div>
                        <i class="bi bi-telephone mr-1 icn"></i>Fax: @item.FaxNumber
                    </div>
                    <div><i class="bi bi-telephone mr-1 icn"></i>Phone Number: @item.PhoneNumber</div>
                    <div>
                        <i class="bi bi-envelope mr-1 icn"></i>Business Contact: @item.BusinessContact
                    </div>
                </div>
                <div class="text-end">
                    <a asp-action="AddBusiness" asp-controller="Admin" asp-route-VendorId="@item.ProfessionId" class="btn text-info border-2 border-info fw-bold rounded-3 px-2 h5 ">Edit</a>
                    <button type="button" onclick="deletebusiness(@item.ProfessionId)" class="btn text-info border-2 border-info fw-bold rounded-3 px-2 h5 ">Delete</button>
                </div>
            </div>
            <br />
        }
    </div>
</div>

@if (Model.TotalPage > 1)
{
    <div class="page-container">
        <ul class="pagination justify-content-center d-flex page-list">
            <li class="page-item @(Model.CurrentPage <= 1 ? "d-none" : "")">
                <a class="page-link border-0 m-2" onclick="changepage(@Model.CurrentPage - 1)"><i class="bi bi-chevron-double-left text-info page"></i></a>
            </li>
            @for (int CurrentPage = 1; CurrentPage <= Model.TotalPage; CurrentPage++)
            {
                <li class="m-2 btn @(CurrentPage == Model.CurrentPage ? "page-active" : "")" onclick="changepage(@CurrentPage)"><a class="text-decoration-none text-black curent-page-index" data-page="@CurrentPage">@CurrentPage</a></li>
            }
            <li class="page-item  @(Model.CurrentPage == Model.TotalPage ? "d-none" : "")">
                <a class="page-link border-0 m-2" onclick="changepage(@Model.CurrentPage + 1)"><i class="bi bi-chevron-double-right text-info page"></i></a>
            </li>
        </ul>

    </div>
}
else if (Model.TotalPage == 1)
{
}
else
{
    <div class="text-center text-danger fw-bold h5">No record found</div>
}


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script>
    function deletebusiness(VendorId) {
        $.ajax({
            url: "/Admin/DeleteBusiness/",
            type: "POST",
            data: { "VendorId": VendorId },
            dataType: "html",
            success: function (data) {
                AjaxAll();
                toastr.success('Business Deleted Sucessfully');
            },
            error: function () {
                console.log('error');
            }
        });
    };
</script>