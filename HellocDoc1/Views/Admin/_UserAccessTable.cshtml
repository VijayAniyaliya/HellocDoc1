@using Services.Models;
@model UserAccessViewModel

<div class="table-responsive mt-2 d-md-block d-none">
    <table class="table">
        <thead>
            <tr class="table-secondary">
                <th scope="col">Account Type</th>
                <th scope="col">Account POC</th>
                <th scope="col">Phone</th>
                <th scope="col">Status</th>
                <th scope="col">Open Requests</th>
                <th class="text-center" scope="col">Actions</th>

            </tr>
        </thead>
        <tbody class="temp">
            @foreach (var item in Model.userAccessDatas)    
            {
                <tr class="align-middle">
                    <td>
                        @Enum.Parse( typeof(Common.Enum.AccountType), item.accType.ToString())
                    </td>
                    <td>
                        @item.fname, @item.lname
                    </td>
                    <td>
                        @item.phone
                    </td>
                    <td>
                        @Enum.Parse( typeof(Common.Enum.PhysicianStatus), item.status.ToString())
                    </td>
                    <td>
                        @item.openReq
                    </td>
                    <td>
                        @if(item.PhysicianId != 0)
                        {
                            <a asp-action="EditPhysician" asp-route-PhysicianId="@item.PhysicianId" class="btn  border-info text-info">
                            Edit
                            </a>
                        }
                        else
                        {
                        <a  class="btn  border-info text-info">
                            Edit
                        </a>
                            
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="accordion accordion-flush d-md-none d-block" id="accordionFlushExample">
    <div class="accordion-item">
        @foreach (var item in Model.userAccessDatas)
        {
            <h2 class="accordion-header" id="flush-headingOne">
                <button class="accordion-button collapsed pb-4" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne-@item.phone" aria-expanded="false" aria-controls="flush-collapseOne" style="background-color:#e7f1ff; color:black">
                    <div class="">@item.fname @item.lname</div>
                    <div class="">@Enum.Parse( typeof(Common.Enum.AccountType), item.accType.ToString())</div>
                </button>
            </h2>
            <div id="flush-collapseOne-@item.phone" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample" style="background-color:#e7f1ff; color:black">

                <div class="accordion-body d-flex flex-column gap-1">
                    <div><i class="bi bi-telephone mr-1 icn"></i>Phone: <span class="fw-bold">@item.phone</span></div>
                    <div><i class="bi bi-check text-info fw-bold mr-2 icn"></i>Status:  <span class="fw-bold">@Enum.Parse( typeof(Common.Enum.PhysicianStatus), item.status.ToString())</span></div>
                    <div><i class="bi bi-check text-info fw-bold mr-2 icn"></i>Open Requests:  <span class="fw-bold">@item.openReq</span></div>

                </div>
                <div class="d-flex justify-content-end align-items-center gap-2 pr-3 pb-2">
                    <button type="button" class="btn  border-info text-info">
                        Edit
                    </button>
                </div>
            </div>
            <br />
        }
    </div>
</div>


