@model Services.Models.RequestedShiftViewModel


<table class="table  d-md-table d-none">
    <thead>
        <tr class="table-secondary">
            <th class="text-center" style="width: 8%;">
                <input class="form-check-input checks" id="All" type="checkbox" value="" style="position:relative;">
            </th>
            <th scope="col">Staff <i class="bi bi-arrow-up-short h5"></i></th>
            <th scope="col">Day</th>
            <th scope="col">Time</th>
            <th scope="col">Region</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShiftDetailList!)
        {
            <tr>
                <td class="text-center">
                    <input class="form-check-input checks ChildCheck" data-id="@item.ShiftDetailId" type="checkbox">
                </td>
                <td>@item.Shift.Physician.FirstName, @item.Shift.Physician.LastName</td>
                <td>@item.ShiftDate.ToString("MMM dd yyyyy")</td>
                <td>@item.StartTime.ToString("h:mm tt") - @item.EndTime.ToString("h:mm tt")</td>
                <td>@item.Region!.Name</td>
            </tr>
        }
    </tbody>
</table>
@foreach (var item in Model.ShiftDetailList!)
{
    <div class="accordion accordion-flush d-md-none d-block" id="accordionFlushExample">
        <hr class="mb-0" />
        <div class="accordion-item">
            <h2 class="accordion-header" id="flush-headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne" style="background-color:#e7f1ff; color:black">
                    <div class="">
                        <div class="ps-4 d-flex align-items-center">
                            <input class="form-check-input checks" type="checkbox" value="" />
                            <span class="ms-2">@item.Shift.Physician.FirstName, @item.Shift.Physician.LastName</span>
                        </div>
                        <div class="ps-1 pt-4">
                            @item.ShiftDate.ToString("MMM dd yyyyy")
                        </div>
                        <div class="ps-1 pt-3">
                            @item.StartTime.ToString("h:mm tt") - @item.EndTime.ToString("h:mm tt")
                        </div>
                        <div class="ps-1 pt-2 pb-3">
                            @item.Region!.Name
                        </div>
                    </div>
                </button>
            </h2>
        </div>
        <hr class="m-0" />
    </div>
}

@if (Model.TotalPage > 1)
{
    <div class="page-container">
        <ul class="pagination justify-content-center d-flex page-list">
            <li class="page-item @(Model.CurrentPage <= 1 ? "d-none" : "")">
                <a class="page-link border-0 m-2" onclick="changepage(@Model.CurrentPage - 1)"><i class="bi bi-chevron-double-left text-info page"></i></a>
            </li>
            @for (int CurrentPage = 1; CurrentPage <= Model.TotalPage; CurrentPage++)
            {
                <li class="m-2 btn @(CurrentPage == Model.CurrentPage ? "page-active" : "")" onclick="changepage(@CurrentPage)"><a class="text-decoration-none text-black curent-page-index" data-page="@CurrentPage">@CurrentPage</a></li>
            }
            <li class="page-item  @(Model.CurrentPage == Model.TotalPage ? "d-none" : "")">
                <a class="page-link border-0 m-2" onclick="changepage(@Model.CurrentPage + 1)"><i class="bi bi-chevron-double-right text-info page"></i></a>
            </li>
        </ul>

    </div>
}
else if (Model.TotalPage == 1)
{
}
else
{
    <div class="text-center text-danger fw-bold h5">No record found</div>
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>

    function deleteselected() {
        var selectedShifts = [];    
        $("input[type='checkbox']:checked").each(function () {
            var id = $(this).data('id');
            selectedShifts.push(id);
        });
        if (selectedShifts.length == 0) {
            toastr.error('Please Select Shift');
        }
        else {
            $.ajax({
                url: '/Admin/DeleteSelectedShift',
                type: 'POST',
                data: { "selectedShifts": selectedShifts },
                success: function () {
                    AjaxAll();
                    toastr.success('Shifts Deleted  Successfully');
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }
    }

    function approveselected() {
        var selectedShifts = [];
        $("input[type='checkbox']:checked").each(function () {
            var id = $(this).data('id');
            selectedShifts.push(id);
        });
        if (selectedShifts.length == 0) {
            toastr.error('Please Select Shift');
        }
        else {
            $.ajax({
                url: '/Admin/ApproveSelectedShift',
                type: 'POST',
                data: { "selectedShifts": selectedShifts },
                success: function (data) {
                    AjaxAll();
                    toastr.success('Shifts Approved Successfully');
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }
    }

    $(document).ready(function () {
        $('#All').click(function () {
            $('.ChildCheck').prop('checked', this.checked);
        });

        // Handle individual checkbox clicks to update the leader checkbox state
        $('.ChildCheck').click(function () {
            $('#All').prop('checked', $('.ChildCheck:checked').length === $('.ChildCheck').length);
        });
    });
</script>

