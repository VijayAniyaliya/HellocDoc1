<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="BlockCase" method="post">
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title" id="staticBackdropLabel">Confirm Block</h5>
                    <button type="button" class="btn-close bg-black" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex flex-row">

                        <p class="text-secondary mr-1">Patient Name :</p><p class="text-info fw-bold">@Model.Name</p>
                        <input type="text" name="request_id" value="@Model.RequestId" hidden />
                    </div>
                    <div>
                        <div class="form-floating mb-3">
                            <textarea class="form-control" asp-for="ReasonForBlock" placeholder="reason"
                                      id="floatingTextarea2" style="height: 100px"></textarea>
                            <label for="floatingTextarea2" class="">
                                Reason for Block Request
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn bg-info text-white">Confirm</button>
                    <button type="button" class="btn border border-info text-info" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>

        </div>
    </div>
</div> 