@model Services.Models.AccessViewModel

@{
    ViewData["Title"] = "CreateAccess";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}
<div class="container">
    <div class=" pt-3">
        <h4>Account Access</h4>

    </div>
    <div class=" pt-4 shadow Document-content mt-3" style="">

        <div class="d-flex justify-content-end mr-3">
            <a type="button" asp-action="CreateAccess" class="btn text-info border-2 border-info fw-bold rounded-3 px-3 h5 d-md-block d-none">Create Access</a>
            <a type="button" asp-action="CreateAccess" class="btn text-info border-2 border-info fw-bold rounded-3 h5 px-2 pb-1 d-md-none d-block p-0"><i class="bi bi-plus h3"></i></a>
        </div>
        <div class="table-responsive mt-2" id="tableContent">
        </div>

        <br />
        <br />
    </div>
</div>

<br />
<br />

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script>
    function deleteraccount(RoleId) {
        $.ajax({
            url: "/Admin/DeleteRole/",
            type: "POST",
            data: { "RoleId": RoleId },
            success: function (data) {
                window.location.reload();
            },
            error: function (error) {
                console.log(error);
            }
        });
    }
    var requestedPage;

    $(document).ready(function () {
        $.ajax({
            url: "/Admin/AccessData",
            type: "POST",
            data: { "requestedPage": 1 },
            dataType: "html",
            success: function (data) {
                $("#tableContent").html(data);
            },
            error: function (error) {
                console.log(error)
            }
        });
    });
    function changepage(CurrentPage) {
        $.ajax({
            url: "/Admin/AccessData",
            type: "POST",
            data: { "requestedPage": CurrentPage },
            dataType: "html",
            async: false,
            success: function (response) {
                $("#tableContent").html(response);
            },
            error: function (error) {
                console.log(error)
            }
        });
    }
    
</script>
