<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border border-0 rounded-3">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="staticBackdropLabel">Contact Your Provider</h5>
                <button type="button" class="btn-close bg-black" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-secondary mt-2 mb-4 h6">
                    Choose Communication to send Message

                </div>
                <div class="mb-3">

                    <div class="mb-2 d-flex align-items-center gap-2">
                        <input class="radios" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                        <label class="mb-0" for="flexRadioDefault1">
                            SMS
                        </label>
                    </div>
                    <div class="mb-2 d-flex align-items-center gap-2">
                        <input class="radios" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                        <label class="mb-0" for="flexRadioDefault2">
                            Email
                        </label>
                    </div>   
                    <div class="d-flex align-items-center gap-2">
                        <input class="radios" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                        <label class="mb-0" for="flexRadioDefault2">
                            Both
                        </label>
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <textarea class="form-control description" placeholder="message"
                              id="floatingTextarea2" style="height: 100px"></textarea>
                    <label for="floatingTextarea2" class="">
                        Message
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn bg-info text-white">Submit</button>
                <button type="button" class="btn border border-info text-info" data-bs-dismiss="modal">Cancel</button>
            </div>

        </div>
    </div>
</div>