@model Services.Models.SchedullingViewModel


@{
    ViewData["Title"] = "MdOnCall";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between pt-3">
        <div class="h4">Requestd Shifts</div>
        <a asp-area="" asp-action="Schedulling" class="btn border-2 border-info text-info p-2 px-3 fw-bold">
            &lt;  Back
        </a>

    </div>
    <div class=" pt-4 Document-content mt-3" style="">

        <div class="d-flex justify-content-md-between flex-column flex-md-row">
            <div class="">
                <select class="form-select select-region" id="region" style="width:300px;">
                    <option selected value="0">All Regions</option>
                    @foreach (var item in Model.RegionList!)
                    {
                        <option value="@item.RegionId">@item.Name</option>

                    }
                </select>
            </div>
            <div class="d-flex gap-2 flex-md-row flex-column m-md-0 mt-3 mx-md-0 mx-sm-5 mx-0 px-md-0 px-0 px-sm-5">
                <a asp-action="Schedulling" class="btn px-3 py-2 text-decoration-none bg-info text-white shadow-sm rounded-3 fw-bold">
                    Calendar View
                </a>
                <a asp-action="RequestedShifts" class="btn px-3 py-2 text-decoration-none bg-info text-white shadow-sm rounded-3 fw-bold">
                    Shift For Review
                </a>
            </div>
        </div>
        <div id="tableContent">
        </div>

        <br />
        <br />
    </div>
</div>

<br />
<br />

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>


    var region = 0;

    $('#region').on('change', function () {
        region = $(this).val();
        OnCallStatus();
    })
    $(document).ready(function () {
        $.ajax({
            url: "/Admin/MdOnCallData",
            type: "POST",
            data: { "region": region },
            dataType: "html",
            success: function (data) {
                $("#tableContent").html(data);
            },
            error: function (error) {
                console.log(error)
            }
        });
    });
    function OnCallStatus() {
        $.ajax({
            url: "/Admin/MdOnCallData",
            type: "POST",
            data: { "region": region },
            dataType: "html",
            success: function (data) {
                $("#tableContent").html(data);
            },
            error: function (error) {
                console.log(error)
            }
        });
    }
</script>