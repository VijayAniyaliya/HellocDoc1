@{
    ViewData["Title"] = "ProviderLocation";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
<style>
    #map {
        height: 70vh;
        z-index: 1;
    }

</style>



<div class="container mt-4">

    <div class="req_form_container d-flex justify-content-between mt-4 mb-3 px-2">
        <h3 class="fw-bold m-0 d-flex align-items-center">Provider Location</h3>
        <div>
            <a class="btn btn-outline-info d-flex align-items-center p-2 px-4 fw-semibold" asp-controller="Admin" asp-action="AdminDashboard" role="button">
                <p class="m-0">&#60; Back</p>
            </a>
        </div>
    </div>

    <div id="map" class="shadow p-2" style="    border: 18px solid white; border-radius: 2%;"></div>
</div>
<br />
<br />S
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    var map = L.map('map').setView([22.2587, 71.1924], 8);

    googleStreets = L.tileLayer('http://{s}.google.com/vt/lyrs=m&x={x}&y={y}&z={z}', {
        maxZoom: 20,
        subdomains: ['mt0', 'mt1', 'mt2', 'mt3']
    }).addTo(map);


    $.ajax({
        url: '/Admin/GetLocation',
        method: 'GET',
        success: function (response) {
            console.log(response);
            response.map(function (res) {
                L.marker([res.latitude, res.longitude]).addTo(map)
                    .bindPopup(res.physicianname)
            })
        }
    })

</script>
