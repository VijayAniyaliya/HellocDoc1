@model Services.Models.RequestedShiftViewModel


@{
    ViewData["Title"] = "ReqestedShifts";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between pt-3">
        <div class="h4">Requestd Shifts</div>
        <a asp-area="" asp-action="Schedulling" class="btn border-2 border-info text-info p-2 px-3 fw-bold">
            &lt;  Back
        </a>

    </div>
    <div class=" pt-4 shadow Document-content mt-3" style="">

        <div class="d-flex justify-content-lg-between flex-column flex-lg-row px-4 mt-3">
            <div class=" m-md-0">
                <div class="d-flex rounded-3 h-100" style="border: 1px solid #ced4da; width:250px;">
                    <i class="bi bi-search my-1 ms-2 mt-2"></i>
                    <select class="form-select select-region border-0" id="region" style="width:300px;">
                        <option selected value="0">All Regions</option>
                        @foreach (var item in Model.RegionList!)
                        {
                            <option value="@item.RegionId">@item.Name</option>

                        }
                    </select>
                </div>
            </div>
            <div class="d-flex gap-2 flex-md-row flex-column m-lg-0 mt-3 mx-md-0 mx-sm-5 mx-0 px-md-0 px-0 px-sm-5">
                <a asp-action="Schedulling" class="btn px-3 py-2 bg-success text-white shadow-sm rounded-3 fw-bold">
                    View Current
                    Month Shifts
                </a>
                <a onclick="approveselected()" class="btn px-3 py-2 bg-success text-white shadow-sm rounded-3 fw-bold">
                    Approved selected
                </a>
                <a onclick="deleteselected()" class="btn px-3 py-2 bg-danger text-white shadow-sm  rounded-3 fw-bold" style="cursor:pointer;">
                    Delete Selected
                </a>
            </div>
        </div>

        <div class="table-responsive mt-2" id="tableContent">
        </div>

        <br />
        <br />
    </div>
</div>

<br />
<br />


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    var region = 0;
    var requestedPage = 1;

    $('#region').on('change', function () {
        region = $(this).val();
        AjaxAll();
    })

    function changepage(CurrentPage) {
        requestedPage = CurrentPage;
        AjaxAll();
    }

    $(document).ready(function () {
        $.ajax({
            url: "/Admin/RequestedShiftData",
            type: "POST",
            data: { "region": region, "requestedPage": requestedPage },
            dataType: "html",
            success: function (data) {
                $("#tableContent").html(data);
            },
            error: function (error) {
                console.log(error)
            }
        });
    });
    function AjaxAll() {
        $.ajax({
            url: "/Admin/RequestedShiftData",
            type: "POST",
            data: { "region": region, "requestedPage": requestedPage },
            dataType: "html",
            success: function (data) {
                $("#tableContent").html(data);
            },
            error: function (error) {
                console.log(error)
            }
        });
    }
</script>

