@model Services.Models.LogsDataViewModel

<table class="table  d-md-table d-none">
    <thead>
        <tr class="table-secondary">
            <th scope="col">Recipent</th>
            <th scope="col">Action</th>
            <th scope="col">Role Name</th>
            <th scope="col">Mobile Number</th>
            <th scope="col">Created Date</th>
            <th scope="col">Sent Date</th>
            <th scope="col">Sent</th>
            <th scope="col">Sent Tries</th>
            <th scope="col">Confiramtion Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.logsDatas)
        {
            <tr>
                <td>@item.ReceiverName</td>
                <td></td>
                <td>@item.RoleName</td>
                <td>@item.PhoneNumber</td>
                <td>@item.CreatedDate.ToString("MMM dd, yyyy h:mm tt")</td>
                <td>@(((DateTime)item.SentDate!).ToString("MMM dd, yyyy"))</td>
                @if (item.IsEmailSent[0] == true)
                {
                    <td>Yes</td>
                }
                else
                {
                    <td>No</td>
                }
                <td>@item.SentTries</td>
                <td>@item.ConfirmationNo</td>
            </tr>
        }
    </tbody>
</table>

<div class="accordion accordion-flush d-md-none d-block" id="accordionFlushExample">

    <div class="accordion-item">
        @foreach (var item in Model.logsDatas)
        {
            <h2 class="accordion-header" id="flush-headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne-@item.PhoneNumber" aria-expanded="false" aria-controls="flush-collapseOne" style="background-color:#e7f1ff; color:black">

                    <div class="col d-flex flex-column">
                        <span class="">@item.ReceiverName</span>
                        <span class="mt-4">Action Name: @item.Action</span>
                        <span class="mt-2">Mobile Number:@item.PhoneNumber</span>
                    </div>
                </button>
            </h2>

            <div id="flush-collapseOne-@item.PhoneNumber" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample" style="background-color:#e7f1ff; color:black">
                <hr class="m-0">
                <div class="accordion-body d-flex flex-column gap-1">
                    <div><i class="bi bi-person mr-2 icn text-info"></i>Role Name: @item.RoleName</div>
                    <div><i class="bi bi-calendar2-minus mr-2 icn text-info"></i>Created Date: @item.CreatedDate.ToString("MMM dd, yyyy h:mm tt")</div>
                    <div><i class="bi bi-calendar2-minus mr-2 icn text-info"></i>Sent Date: @(((DateTime)item.SentDate!).ToString("MMM dd, yyyy"))</div>
                    <div>
                        <i class="bi bi-check2 mr-2 icn text-info"></i>Sent:
                        @if (item.IsEmailSent[0] == true)
                        {
                            <span>Yes</span>
                        }
                        else
                        {
                            <span>No</span>
                        }
                    </div>
                    <div><i class="bi bi-envelope mr-2 icn text-info"></i>Sent Tries: @item.SentTries</div>
                    <div>
                        <i class="bi bi-check2 mr-2 icn text-info"></i>Confirmation Number: @item.ConfirmationNo
                    </div>
                </div>
            </div>
            <br />
        }
    </div>
</div>

@if (Model.TotalPage > 1)
{
    <div class="page-container">
        <ul class="pagination justify-content-center d-flex page-list">
            <li class="page-item @(Model.CurrentPage <= 1 ? "d-none" : "")">
                <a class="page-link border-0 m-2" onclick="changepage(@Model.CurrentPage - 1)"><i class="bi bi-chevron-double-left text-info page"></i></a>
            </li>
            @for (int CurrentPage = 1; CurrentPage <= Model.TotalPage; CurrentPage++)
            {
                <li class="m-2 btn @(CurrentPage == Model.CurrentPage ? "page-active" : "")" onclick="changepage(@CurrentPage)"><a class="text-decoration-none text-black curent-page-index" data-page="@CurrentPage">@CurrentPage</a></li>
            }
            <li class="page-item  @(Model.CurrentPage == Model.TotalPage ? "d-none" : "")">
                <a class="page-link border-0 m-2" onclick="changepage(@Model.CurrentPage + 1)"><i class="bi bi-chevron-double-right text-info page"></i></a>
            </li>
        </ul>

    </div>
}
else if (Model.TotalPage == 1)
{
}
else
{
    <div class="text-center text-danger fw-bold h5">No record found</div>
}