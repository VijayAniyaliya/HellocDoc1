    function AjaxAll() {
        $.ajax({
            url: filterdata.url,
            type: "POST",
            data: filterdata,
            dataType: "html",
            success: function (data) {
                let isLogin = data.includes("Login");
                if (isLogin) {
                    window.location.reload();
                }
                else {
                    $("#tableContent").html(data);
                    $("#status").html("(New)");
                }

            },
            error: function (error) {
                console.log(error)
                $("#tableContent").html('An error has occurred');
            }
        });
    }

    $(".selected").click(function () {
        var requestType = $(this).attr('id');

        switch (requestType) {
            case '1':
                requestType = 1;
                break;
            case '2':
                requestType = 2;
                break;
            case '3':
                requestType = 3;
                break;
            case '4':
                requestType = 4;
                break;
            default:
        }
        filterdata.requesttype = requestType;
        filterdata.requestedPage = 1;
        AjaxAll();
    })

    function changepage(CurrentPage) {
        filterdata.requestedPage = CurrentPage;
        AjaxAll();
    }

