@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

@model Services.Models.AdminDashboardViewModel

<div class="d-flex justify-content-center">
    <div class="" style="width:95%">

        <div class="row  mt-3 mb-4 mx-auto">

            <div class="col-lg-2 col-4 px-2 pb-2 status" id="1">
                <div class="px-2 py-1 new newActive rounded-3 pt-1 text-md-left text-center" id="pills-new-tab" onclick="newState()">

                    <i class="bi bi-patch-plus icons"></i>

                    <span class="ms-1 fw-bold newTxt">NEW</span>

                    <span class="mt-2 h4 newTxt d-block">@Model.newCount</span>
                </div>
            </div>
            <div class="col-lg-2 col-4 px-2 pb-2 status" id="2">
                <div class="px-2 py-1 rounded-3 pending pt-1 text-md-left text-center" id="pills-pending-tab" onclick="pendingState()">

                    <i class="bi bi-clock-history icons"></i>

                    <span class="ms-1 fw-bold">PENDING</span>

                    <span class="mt-2 h4 d-block">@Model.pendingCount</span>
                </div>
            </div>
            <div class="col-lg-2 col-4 px-2 pb-2 status" id="3">
                <div class="px-2 py-1 rounded-3 active pt-1 text-md-left text-center" id="pills-active-tab" onclick="activeState()">

                    <i class="bi bi-check2-circle icons"></i>

                    <span class="ms-1 fw-bold">ACTIVE</span>

                    <span class="mt-2 h4 d-block">@Model.activeCount</span>
                </div>
            </div>
            <div class="col-lg-2 col-4 px-2 status" id="4">
                <div class="px-2 py-1 rounded-3 conclude pt-1 text-md-left text-center" id="pills-conclude-tab" onclick="concludeState()">

                    <i class="bi bi-arrow-counterclockwise icons"></i>

                    <span class="ms-1 fw-bold">CONCLUDE</span>

                    <span class="mt-2 h4 d-block">@Model.concludeCount</span>
                </div>
            </div>
            <div class="col-lg-2 col-4 px-2 status" id="5">
                <div class="px-2 py-1 rounded-3 toclose pt-1 text-md-left text-center" id="pills-close-tab" onclick="closeState()">

                    <i class="bi bi-x-circle icons"></i>

                    <span class="ms-1 fw-bold">TO CLOSE</span>

                    <span class="mt-2 h4 d-block">@Model.tocloseCount</span>
                </div>
            </div>
            <div class="col-lg-2 col-4 px-2 status" id="6">
                <div class="px-2 py-1 rounded-3 unpaid pt-1 text-md-left text-center" id="pills-unpaid-tab" onclick="unpaidState()">
                    <span class=" fw-bold mt-2 icons">$</span>
                    <span class="ms-1 fw-bold">UNPAID</span>

                    <span class="mt-2 h4 d-block">@Model.unpaidCount</span>
                </div>
            </div>
        </div>
        <div class="d-flex flex-row justify-content-between mt-5 mb-3">
            <div>
                <span class="h4">Patient </span>
                <span class=" fw-bold" id="status" style="color:#203f9a;"></span>
            </div>
            <div class="d-flex gap-1">
                <a onclick="sendmail()" class="bg-info text-white rounded-3 p-2" style="cursor:pointer;">
                    <i class="bi bi-reply h5 mr-1"></i>
                    <span class="link-text">Send Link</span>
                </a>
                <a asp-action="CreateRequest" class="bg-info text-white rounded-3 p-2 text-decoration-none" style="cursor:pointer;">
                    <i class="bi bi-pencil-square  mr-1"></i>
                    <span class="link-text">Create Requests</span>
                </a>
                <a class="bg-info text-white rounded-3 p-2" id="exportbtn" style="cursor:pointer;">
                    <i class="bi bi-reply-all  mr-1"></i>
                    <span class="link-text">Export</span>
                </a>
                <a class="bg-info text-white rounded-3 p-2" id="exportbtnall" style="cursor:pointer;">
                    <i class="bi bi-reply-all  mr-1"></i>
                    <span class="link-text">Export All</span>
                </a>
                <a onclick="requestsupport()" class="bg-info text-white rounded-3 p-2" style="cursor:pointer;">
                    <i class="bi bi-person-square  mr-1"></i>
                    <span class="link-text">Request DTY Support</span>
                </a>
            </div>
        </div>
        <div class="shadow rounded-3 pt-4">

            <div class="px-2 row" style="">
                <div class="form col-xl-3 col-md-6">
                    <div class="d-flex rounded-3 h-100" style="border: 1px solid #ced4da;">
                        <i class="bi bi-search my-1 ms-1 mr-2"></i>
                        <input id="searchpatient" onkeyup="searchpatient()" class="form-control form-control-sm border-0 shadow-none p-0" type="search" placeholder="Search Patients" aria-label="Search">
                    </div>
                </div>
                <div class="form col-xl-3 col-md-6 mt-3 m-md-0">
                    <div class="d-flex rounded-3 h-100" style="border: 1px solid #ced4da;">
                        <i class="bi bi-search my-1 ms-1 mr-2"></i>
                        <select class="form-select select-region text-secondary border-0" id="region">
                            <option selected>All Regions</option>
                            @foreach (var item in Model.regions)
                            {
                                <option value="@item.RegionId">@item.Name</option>
                            }
                        </select>
                    </div>

                </div>


                <div class="col-xl-6 col-md-12 mt-2 ms-1 m-xl-0 d-flex flex-row flex-wrap justify-content-xl-end justify-content-start">
                    <button class="text-secondary mr-sm-2 m-0 border-info rounded-2 bg-transparent selected">

                        <span class="filter-label">ALL</span>
                    </button>
                    <button class="text-secondary mr-sm-2 m-0 border-0 bg-transparent selected d-flex flex-column align-items-center flex-sm-row" id="1">
                        <i class="bi bi-circle-fill text-success mr-1"></i>
                        <span class="filter-label">Patient</span>
                    </button>
                    <button class="text-secondary mr-sm-2 m-0 border-0 bg-transparent selected d-flex flex-column align-items-center flex-sm-row" id="2">
                        <i class="bi bi-circle-fill text-warning mr-1"></i>
                        <span class="filter-label">Family/Friend</span>
                    </button>
                    <button class="text-secondary mr-sm-2 m-0 border-0 bg-transparent selected d-flex flex-column align-items-center flex-sm-row" id="3">
                        <i class="bi bi-circle-fill mr-1" style="color:pink;"></i>
                        <span class="filter-label">Business</span>
                    </button>
                    <button class="text-secondary  mr-sm-2 m-0 border-0 bg-transparent selected d-flex flex-column align-items-center flex-sm-row" id="4">
                        <i class="bi bi-circle-fill text-primary mr-1"></i>
                        <span class="filter-label">Concierge</span>
                    </button>
                    <button class="text-secondar border-0 bg-transparent d-flex flex-column align-items-center flex-sm-row">
                        <i class="bi bi-circle-fill mr-sm-1 m-0" style="color:purple;"></i>
                        <span class="mr-2 filter-label">VIP</span>
                    </button>
                </div>


            </div>

            <div id="tableContent" class="table-responsive mt-4 mb-5">
            </div>
        </div>
    </div>
