@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="d-flex justify-content-center bg-black">
    <div class="" style="width:95%">
        <div class="row gap-3 mt-3 mb-4 mx-auto">
            <a class="col rounded-3 new">
                <div class="mt-1">
                    <i class="bi bi-check2-circle h4"></i>
                    <span class="ms-1 h6">NEW</span>
                </div>
                <div class="mt-2 h4">1452</div>
            </a>
            <a class="col rounded-3 pending">
                <div class="mt-1">
                    <i class="bi bi-check2-circle h4"></i>
                    <span class="ms-1 h6">PENDING</span>
                </div>
                <div class="mt-2 h4">1452</div>
            </a>
            <a class="col rounded-3 active">
                <div class="mt-1">
                    <i class="bi bi-check2-circle h4"></i>
                    <span class="ms-1 h6">ACTIVE</span>
                </div>
                <div class="mt-2 h4">1452</div>
            </a>
            <a class="col rounded-3 conclude">
                <div class="mt-1">
                    <i class="bi bi-check2-circle h4"></i>
                    <span class="ms-1 h6">CONCLUDE</span>
                </div>
                <div class="mt-2 h4">1452</div>
            </a>
            <a class="col rounded-3 toclose">
                <div class="mt-1">
                    <i class="bi bi-check2-circle h4"></i>
                    <span class="ms-1 h6">TO CLOSE</span>
                </div>
                <div class="mt-2 h4">1452</div>
            </a>
            <a class="col rounded-3 unpaid">
                <div class="mt-1">
                    <i class="bi bi-check2-circle h4"></i>
                    <span class="ms-1 h6">UNPAID</span>
                </div>
                <div class="mt-2 h4">1452</div>
            </a>
        </div>
        <div class="d-flex flex-row justify-content-between mt-5 mb-3">
            <div>
                <span class="h4">Patient </span>
                <span>(Conclude)</span>
            </div>
            <div class="d-flex gap-1">
                <a class="bg-info text-white rounded-3 p-2">
                    <i class="bi bi-check2-circle h5 mr-1"></i>
                    <span>Send Link</span>
                </a>
                <a class="bg-info text-white rounded-3 p-2">
                    <i class="bi bi-check2-circle h5 mr-1"></i>
                    <span>Create Requests</span>
                </a>
                <a class="bg-info text-white rounded-3 p-2">
                    <i class="bi bi-check2-circle h5 mr-1"></i>
                    <span>Export</span>
                </a>
                <a class="bg-info text-white rounded-3 p-2">
                    <i class="bi bi-check2-circle h5 mr-1"></i>
                    <span>Export All</span>
                </a>
                <a class="bg-info text-white rounded-3 p-2">
                    <i class="bi bi-check2-circle h5 mr-1"></i>
                    <span>Request DTY Support</span>
                </a>
            </div>
        </div>
        <div class="shadow rounded-3 pt-4">

            <div class="px-2 d-flex justify-content-between" style="">
                <div class="d-flex flex-row gap-2">
                    <div class="form">
                        <input type="text" class="form-control form-input" placeholder=" Search Patients">
                    </div>
                    <div class="form">
                        <select class="form-select" id="floatingSelect">
                            <option selected>All Regions</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>


                </div>
                <div class="d-flex gap-4">
                    <a class="text-secondary ">

                        <span>ALL</span>
                    </a>
                    <a class="text-secondary ">
                        <i class="bi bi-circle-fill text-success mr-1"></i>
                        <span>Patient</span>
                    </a>
                    <a class="text-secondary ">
                        <i class="bi bi-circle-fill text-warning mr-1"></i>
                        <span>Family/Friend</span>
                    </a>
                    <a class="text-secondary ">
                        <i class="bi bi-circle-fill mr-1" style="color:pink;"></i>
                        <span>Business</span>
                    </a>
                    <a class="text-secondary  ">
                        <i class="bi bi-circle-fill text-primary mr-1"></i>
                        <span>Concierge</span>
                    </a>
                    <a class="text-secondar ">
                        <i class="bi bi-circle-fill mr-1" style="color:purple;"></i>
                        <span class="mr-2">VIP</span>
                    </a>
                </div>


            </div>

            <div class="table-responsive mt-4">

                <table class="table table-secondary">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Date Of Birth</th>
                            <th scope="col">Requestor</th>
                            <th scope="col">Request Date</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Address</th>
                            <th scope="col">Notes</th>
                            <th scope="col">Chat With</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
